<% provide(:title, "Home") %>
<!DOCTYPE html>
    
<html>
  <head>
    <title> <%= yield(:title) %> | Simple_todo_list</title>
  </head>
  <body>
    <% if logged_in? %>
    <%= $NOT_CONST %> 
      <% @tasks.each do |task| %>
        <ol>
          <li>
            <strong>Task id:</strong>
            <%= task.id %>
            <strong>Task name:</strong>
            <%= task.name %>
            <strong>Task project_id:</strong>
            <%= task.project_id %>            
          </li>  
        </ol>  
      <% end %>      
      <p>  <%= render 'shared/user_info' %>  </p>
      <p>  <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-primary" %>  </p>
      <h1> Simple todo list </h1>
      <h3> From ruby garage </h3>    
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <%= render 'shared/feedprojects' %>
      <button class="btn btn-primary" type="button" id="formButton">+ add_TODO_List</button>
      <%= render 'shared/project_form' %>
    <% else %>
      <ul class="nav">
        <li><p> Simple todo list </p></li>
        <li><%= link_to "Log in", login_path, class: "btn" %></li>
        <li><%= link_to "Sign up", signup_path, class: "btn" %></li>
      </ul>
    <% end %>  
  </body>
</html>