<% provide(:title, "Home") %>
<!DOCTYPE html>
    
<html>
  <head>
    <title> <%= yield(:title) %> | Simple_todo_list</title>
  </head>
  <body>
    <% if logged_in? %>
      <!-- del 
       render 'shared/feed' 
      -->
      <h2 class="current-date"><%= @date%></h2>
      <p>  <%= render 'shared/user_info' %>  </p>
      <p>  <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-primary" %>  </p>
      <h1> Simple todo list </h1>
      <p> From ruby garage </p>
      <!-- if @projects.any?  -->
      <% #binding.pry %>
      <p>@projects.count <%= @projects.count%></p>
      <p>current_user.projects.any? <%= current_user.projects.any? %></p>
      <p>current_user.listprojects.any? <%= current_user.listprojects.any? %></p>
      <!--<div class="projectsN">-->
        
        <%= render 'shared/listprojects' %>
        
      <!--</div>-->
      <button class="btn btn-primary" type="button" id="add-todo-list">+ add_TODO_List</button>
        <%= render 'shared/project_form' %>
      <% else %>
      <ul class="nav">
        <li><p> Simple todo list </p></li>
        <li><%= link_to "Log in", login_path, class: "btn btn-default btn-xs" %></li>
        <li><%= link_to "Sign up", signup_path, class: "btn btn-primary btn-xs" %></li>
      </ul>
    <% end %>  
  </body>
</html>